<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nodejs Basic</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>
    <div class="data-user">
        <h2>List User</h2>
        <table id="customers">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < dataUsers.length; i++) { %>
                    <tr>
                        <td>
                            <%= dataUsers[i].id %>
                        </td>
                        <td>
                            <%= dataUsers[i].firstName %>
                        </td>
                        <td>
                            <%= dataUsers[i].lastName %>
                        </td>
                        <td>
                            <button><a href="/detail/user/<%= dataUsers[i].id %>" target="_blank">Detail</a></button>
                            <button>Change</button>
                            <button>Delete</button>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>